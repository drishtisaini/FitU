<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <!-- ðŸ”² FrameLayout to layer icon above everything -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ðŸŒŸ Background + Scrollable Content together -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ðŸŒŸ Background Animation -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_rawRes="@raw/fitness_animation"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:scaleType="centerCrop"
                android:translationY="50dp"
                android:alpha="0.3" />

            <!-- ðŸŒˆ Scrollable Profile Content -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp"
                android:layout_marginTop="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="50dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_user"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/editIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="4dp"
                            android:padding="5dp"
                            android:background="@drawable/your_default_avatar"
                            android:elevation="4dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/btnstreaks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ Streaks"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnfitness"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="ðŸ‹ï¸ Start Fitness"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:background="@drawable/oval_button_red"
                        android:layout_marginBottom="24dp" />

                    <Button
                        android:id="@+id/btnconsult"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="ðŸ§‘â€âš•ï¸ Consult"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:background="@drawable/oval_button_red"
                        android:layout_marginBottom="24dp" />

                    <Button
                        android:id="@+id/btngame"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="ðŸŽ® Game"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:background="@drawable/oval_button_red"
                        android:layout_marginBottom="50dp" />

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <!-- ðŸ”¥ Hamburger Icon OVERLAYED on top properly -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="start|top"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu Icon" />
    </FrameLayout>

    <!-- ðŸ§¾ Sidebar Menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
